
@{
    ViewBag.Title = "ForgotPassword";
}

<style>
    .card {
        height: 73vh; 
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa; 
    }
</style>
<div class="row d-flex justify-content-center" >
<div class="card shadow-lg p-4" style="width: 400px;">
    <div class="card-body mt-4">
        <h3 class="text-center mb-3">Forgot Password?</h3>
        <p class="text-muted text-center small">Enter your registered email</p>

        <div class="mb-3">
            <label for="txtemail" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="txtemail" placeholder="Enter your email" required>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Send Reset Link</button>
        </div>

        <div class="text-center mt-3">
            <a href="/User/SignIn" class="text-decoration-none">Back to Login</a>
        </div>
    </div>
</div>

</div>

